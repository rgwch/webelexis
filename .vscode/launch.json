{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Selfservice",
      "program": "${workspaceFolder}/selfservice/bin/www",
      "outputCapture": "std",
      "cwd": "${workspaceFolder}/selfservice",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "call metrics",
      "program": "${workspaceFolder}/server/test/callmetrics.js",
      "cwd": "${workspaceFolder}/server",
      "env": {
        "NODE_CONFIG_DIR": "${workspaceFolder}/server/config"
      },
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Load oddb",
      "program": "${workspaceFolder}/server/src/util/load-oddb.js"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome",
      "url": "http://localhost:9000",
      "webRoot": "${workspaceFolder}/client"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/server/node_modules/mocha/bin/_mocha",
      "outputCapture": "std",
      "cwd": "${workspaceFolder}/server",
      "env": {
        "NODE_CONFIG_DIR": "${workspaceFolder}/server/config"
      },
      "args": [
        "-u",
        "tdd",
        "--timeout",
        "999999",
        "--colors",
        "--recursive",
        "${workspaceFolder}/server/test"
      ],
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Server debug",
      "program": "${workspaceFolder}/server/src/index.js",
      "outputCapture": "std",
      "cwd": "${workspaceFolder}/server",
      "env": {
        "NODE_CONFIG_DIR": "${workspaceFolder}/server/config",
        "EXTERNAL_PORT": 2019
      }
    }
  ]
}
